<h1>Stimulus Testing</h1>

<div data-controller='hello' data-action="click->hello#show">Click me for a message</div>

<hr>

<div data-controller="alert">
  <button data-action="click->alert#show">Alert me!</button>
</div>

<div data-controller="greeter">
  <input type="text" 
        data-greeter-target="name">
  <button data-action="greeter#greet">Greet</button>
  <div data-greeter-target="output"></div>
</div>

<hr>
<h1>Clipboard</h1>
<div data-controller='clipboard'>
  PIN: <input data-clipboard-target="source" type="text" value="1234" readonly>
  <button data-action="clipboard#copy">Copy to Clipboard</button>
</div>

<div data-controller="clipboard">
  PIN: <input data-clipboard-target="source" type="text" value="3737" readonly>
  <button data-action="clipboard#copy" class="clipboard-button">Copy to Clipboard</button>
</div>

<div data-controller="clipboard">
  PIN: <input data-clipboard-target="source" type="text" value="1337" readonly>
  <a href="#" data-action="clipboard#copy" class="clipboard-button">Copy to Clipboard</a>
</div>

<hr>
<h1>Slide Show</h1>
<div data-controller="slideshow" data-slideshow-index-value='1'>
  <button data-action="slideshow#previous"> ← </button>
  <button data-action="slideshow#next"> → </button>

  <div data-slideshow-target="slide">🐵1</div>
  <div data-slideshow-target="slide">🙈2</div>
  <div data-slideshow-target="slide">🙉3</div>
  <div data-slideshow-target="slide">🙊4</div>
</div>